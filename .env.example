# Auth.js Configuration
AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
GITHUB_ID=your-github-oauth-app-client-id
GITHUB_SECRET=your-github-oauth-app-client-secret

# Whitelist Configuration (fail-safe: if not set, access is denied)
# Comma-separated GitHub usernames
ALLOWED_GITHUB_LOGINS=alice,bob,charlie
# Comma-separated email domains (optional)
ALLOWED_EMAIL_DOMAINS=yourcompany.com,example.com

# N8N Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/endpoint
# Optional: if set, requires x-n8n-secret header
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret
